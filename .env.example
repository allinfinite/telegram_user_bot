TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890

# Bot identity
BOT_NAME=MyBot
SELF_USERNAME=mybot

# Optional: session file path (defaults to ./bot_session)
# SESSION_NAME=bot_session

# Comma-separated owner usernames (can send DM commands)
OWNER_USERNAMES=your_username

# Group chat ID the bot lives in (for owner chime-in commands)
GROUP_CHAT_ID=0

# Optional: invite link to auto-join on startup
# INVITE_LINK=https://t.me/+abcdef123456

# LLM backend: "venice" or "ollama"
TEXT_BACKEND=venice

# Venice.ai config
VENICE_API_KEY=your_venice_key_here
VENICE_MODEL=llama-3.3-70b
VENICE_VISION_MODEL=mistral-31-24b

# Local Ollama config (used when TEXT_BACKEND=ollama)
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=qwen3:14b
# OLLAMA_VISION_MODEL=llava:7b

# Tuning knobs
BUFFER_SIZE=50
MIN_MSG_GAP=15
RANDOM_CHIME_CHANCE=0.08
